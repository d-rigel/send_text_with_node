    type="tel"
    name="number"
    id="number"
    placeholder="Enter Phone Number..."
  />
  <input type="text" name="msg" id="msg" placeholder="Enter Text Message..." />
  <input
    type="button"
    id="button"
    value="Send Text"
    class="button button-primary"
  />
  <p class="response"></p>
</div>
